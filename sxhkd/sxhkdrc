# terminals
super + Return
    st

super + shift + Return
    $HOME/Dotfiles/i3/scripts/empty-workspace.sh && st

super + alt + Return
    st -e bash

super + ctrl + Return
    st -e fish

super + KP_Enter
    xterm

ctrl + alt + t
    alacritty


# rofi
super + d
    rofi -show drun

super + shift + d
    rofi -show run

super + period
    rofi -show emoji -matching normal

# dmenu
super + ctrl + d
    dmenu_run

super + ctrl + shift + d
    dmenu_run

# super + Tab
#    rofi -show window

super + shift + s
    exec-scripts

ctrl + shift + space
    krunner

ctrl + alt + space
    krunner

# screenshots
# super + r
#     ksnip --rectarea -d 0
# 
# alt + r
#     ksnip --rectarea -d 0
# 
# super + shift + r
#     ksnip --fullscreen -d 0
# 
# alt + shift + r
#   ksnip --fullscreen -d 0
 

# lock screen
super + shift + Escape
    mpc pause && betterlockscreen -l

# clipboard
super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# system monitor
super + Escape
    st -e btop

super + ctrl + Escape
    plasma-systemmonitor

super + ctrl + shift + Escape
    st -e btm

# music control
super + {less, greater, slash}
    {mpc prev, mpc next, mpc toggle}

# volume control
# decrease volume by 5
super + bracketleft
    qdbus org.kde.kglobalaccel /component/kmix invokeShortcut "decrease_volume"

# numlock subtract
super + KP_Subtract
    qdbus org.kde.kglobalaccel /component/kmix invokeShortcut "decrease_volume"

# increase volume by 5
super + bracketright
    qdbus org.kde.kglobalaccel /component/kmix invokeShortcut "increase_volume"

# numlock add
super + KP_Add
    qdbus org.kde.kglobalaccel /component/kmix invokeShortcut "increase_volume"

# mute/unmute
super + backslash
    qdbus org.kde.kglobalaccel /component/kmix invokeShortcut "mute"

# numlock zero
super + KP_Insert
    qdbus org.kde.kglobalaccel /component/kmix invokeShortcut "mute"

# launch apps
super + o; {n, shift+n, shift+alt+n, f, shift+f, shift+alt+f, m, shift+m, c, shift+c, shift+alt+c, b, shift+b, r, shift+r}
    {st -e nvim, st -e nvim -u NONE, st -e lvim, st -e ranger, dolphin, thunar, st -e ncmpcpp, st -e cava, st -e insect, st -e python3 -q, st -e bc -q, firefox-developer-edition, brave, st -e newsboat, st -e rtv}

# open notification center
# super + n
#     pkill -USR1 deadd-notificat

# clear all notifications in the notification center
super + shift + n
    notify-send.py a --hint boolean:deadd-notification-center:true string:type:clearInCenter

# random wallpaper
super + w
    wallpaper.sh --random

# switch back to default wallpaper
super + shift + w
    wallpaper.sh --default

# display the filename of current wallpaper
super + alt + w
    wallpaper.sh --current-wallpaper

# show/hide secondary polybar
super + b
    polybar-msg cmd toggle

# toggle borders (i3)
super + shift + b
    i3-msg "border toggle"

# i3 marks (easyfocus)
# super + m
#    i3-easyfocus --color-unfocused-fg 000000 --color-unfocused-bg FFFFFF --color-focused-fg 000000 --color-focused-bg FFFFFF --color-urgent-fg 000000 --color-urgent-bg FFFFFF

# right click
shift + F10
    sleep 0.2 && xdotool click 3
