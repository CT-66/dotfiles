# terminals
super + Return
    st

super + shift + Return
    $HOME/Dotfiles/i3/scripts/empty-workspace.sh && st

super + alt + Return
    st -e bash

ctrl + alt + t
    alacritty


# rofi
super + d
    rofi -modi drun,run -show drun

super + shift + d
    i3-dmenu-desktop --dmenu='rofi -dmenu'

super + Tab
    rofi -show window

# screenshots
super + r
    flameshot gui

super + shift + r
    flameshot full -c -p ~/Pictures/Screenshots && notify-send 'Screenshot saved to ~/Pictures/Screenshots'

# alt + r
#     flameshot gui -c -p ~/Pictures/Screenshots"

# lock screen
super + shift + Escape
    betterlockscreen -l

# clipboard
super + shift + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# system monitor
super + Escape
    $HOME/Dotfiles/i3/scripts/empty-workspace.sh && st -e btop

# music control
super + {less, greater, slash}
    {mpc prev, mpc next, mpc toggle}

# volume control
# decrease volume by 5
super + bracketleft
    pamixer -d 5

# increase volume by 5
super + bracketright
    pamixer -i 5

# mute/unmute
super + backslash
    pamixer -t

# launch apps
# text editor
# super + n
#     st -e nvim

# super + shift + n
#     st -e nvim -u NONE

# # file managers (tui and gui)
# super + m
#     st -e ranger

# super + shift + m
#     dolphin

# # calculator
# super + i
#     st -e insect

# super + shift + i
#     st -e python

super + o; {n,shift+n,f,shift+f,m,shift+m}
    {st -e nvim,st -e nvim -u NONE,st -e ranger,dolphin,st -e mpc clear; mpc ls | mpc add ncmpcpp,}
