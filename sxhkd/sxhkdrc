# terminals
super + Return
    st

super + shift + Return
    $HOME/Dotfiles/i3/scripts/empty-workspace.sh && st

super + alt + Return
    st -e bash

ctrl + alt + t
    alacritty


# rofi
super + d
    rofi -show drun

super + shift + d
    rofi -show run

# dmenu
super + shift + ctrl + d
    dmenu_run

super + Tab
    rofi -show window

super + ctrl + s
    exec-scripts

# screenshots
super + r
    flameshot gui

super + shift + r
    flameshot full -c -p ~/Pictures/Screenshots && notify-send 'Screenshot saved to ~/Pictures/Screenshots'

# alt + r
#     flameshot gui -c -p ~/Pictures/Screenshots"

# lock screen
super + shift + Escape
    mpc pause && betterlockscreen -l

# clipboard
super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# system monitor
super + Escape
    $HOME/Dotfiles/i3/scripts/empty-workspace.sh && st -e btop

super + ctrl + Escape
    st -e btop

# music control
super + {less, greater, slash}
    {mpc prev, mpc next, mpc toggle}

# volume control
# decrease volume by 5
super + bracketleft
    pamixer -d 5

# increase volume by 5
super + bracketright
    pamixer -i 5

# mute/unmute
super + backslash
    pamixer -t

# launch apps
super + o; {n, shift+n, shift+alt+n, f, shift+f, shift+alt+f, m, shift+m, c, shift+c,shift+alt+c, b, shift+b, r, shift+r, i, shift+i}
    {st -e nvim, st -e nvim -u NONE, st -e lvim, st -e ranger, dolphin, thunar, st -e ncmpcpp, st -e cava, st -e insect, st -e python3 -q, st -e bc -q, brave, brave-beta, st -e newsboat, st -e rtv, brave --incognito, firefox --private}

# open notification center
super + n
    pkill -USR1 deadd-notificat

# clear all notifications in the notification center
super + shift + n
    notify-send.py a --hint boolean:deadd-notification-center:true string:type:clearInCenter

# random wallpaper
super + w
    wallpaper.sh --random

# switch back to default wallpaper
super + shift + w
    wallpaper.sh --default

# show/hide secondary polybar
super + b
    polybar-msg cmd toggle

# toggle borders (i3)
super + shift + b
    i3-msg "border toggle"
