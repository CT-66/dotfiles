#!/bin/bash

# dir="$(\ls ~/Music | rofi -dmenu -p "Music")"
# cd "$dir"

# song="$(\ls ~/Music/$dir | rofi -dmenu -p "Music")"
# mpv ~/Music/"$dir"/"$song" --no-video

song="$(fd -e mp3 -e m4a . ~/Music | cut -d'/' -f5- | rofi -dmenu -i -p "Music")"
if [ "song" == "" ]; then
    :
else
    mpv $HOME/Music/"$song" --no-video
fi
