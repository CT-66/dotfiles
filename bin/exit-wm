#!/bin/python3
# vim: filetype=python
from os import system
import sys

if len(sys.argv) < 2:
    print("Error: No window manager specified. Quitting script.\nUsage: exit-wm [window manager]")
    exit()

wm = sys.argv[1]

def exit():
    sys.exit()

def exit_i3():
    system("i3-msg exit")


def exit_qtile():
    system("pkill qtile")


def exit_awesome():
    system("pkill awesome")


def exit_openbox():
    system("openbox --exit")


def main(wm):
    if wm == "i3":
        exit_i3()
    elif wm == "qtile":
        exit_qtile()
    elif wm == "awesome":
        exit_awesome()
    elif wm == "openbox":
        exit_openbox()

prompt = input(f"Are you sure you want to exit {wm}? (yes/no) ").lower().strip().rstrip()

if prompt == "yes":
    main(wm)
elif prompt == "no":
    print("Quitting script")
    exit()
else:
    print(f"'{prompt}' is not a valid response. Quitting script.")
    exit()
